pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script {
                    echo 'Hello, this is the build phase'
                }
            }
        }
    stage('Test') {
            steps {
                script {
                    echo 'Hello, this is the Test phase'
                }
            }
        }
    stage('Deploy') {
            steps {
                script {
                    echo 'Hello, this is the deploy phase'
                }
            }
        }
    }
}